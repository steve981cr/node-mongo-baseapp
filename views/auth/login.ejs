<% include ../layouts/header %>

<div class='row'>
  <div class='col-md-6 offset-md-3 mt-4'>
    <div class="card">
      <h2 class="card-header bg-dark text-white text-center">
        Log In
      </h2>
      <form method="POST" action="/auth/login">
      <div class="card-body">
        <% include ../layouts/form-errors %>
        <div class='form-group'>
          <label for="email">Email</label>
          <input type="email" name="email" value="<%= typeof user === 'undefined' ? '' : user.email %>" class='form-control' required autofocus>
        </div>

        <div class='form-group'>
          <label for="password">Password</label> (<a href="/auth/forgot-password" tabindex="-1">Forgot Password?</a>)
          <input type="password" name="password" class='form-control' required>
        </div>
      </div>
      <div class="card-footer">
        <div class='form-group'>
          <button type="submit" class='btn btn-large btn-primary'>Log In</button>
          <span class="float-right">New user? <a href="/auth/signup">Sign up now!</a></span>
        </div>
      </form>
      </div>
    </div>
  </div>
</div>

<% include ../layouts/footer %>